            <id>ReleasePackages</id>
            <distributionManagement>
                <repository>
                    <id>github</id>
                    <name>GitHub Packages</name>
                    <url>https://maven.pkg.github.com/ikmdev/demo-java-maven/releases</url>
                </repository>
            </distributionManagement>
        </profile>
        <profile>
            <id>SnapshotsPackages</id>
            <distributionManagement>
                <repository>
                    <id>github</id>
                    <name>GitHub Packages</name>
                    <url>https://maven.pkg.github.com/ikmdev/demo-java-maven/snapshots</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>


				<plugin>
				    <groupId>org.codehaus.mojo</groupId>
				    <artifactId>license-maven-plugin</artifactId>
				    <version>2.4.0</version>
				    <configuration>
						<verbose>false</verbose>
				    	
				    	<includes>
                			<includes>**/*.java</includes>
              			</includes>
              									
          				<addSvnKeyWords>true</addSvnKeyWords>
				        <licenseName>demo-java-maven-license</licenseName>
				        <projectName>demo-java-maven Project</projectName>
				        <organizationName>IKMDEV</organizationName>
				        <addJavaLicenseAfterPackage>false</addJavaLicenseAfterPackage>
				        <inceptionYear>2024</inceptionYear>
        				<processStartTag>========================LICENSE_START=================================</processStartTag>
        				<processEndTag>=========================LICENSE_END==================================</processEndTag>
				        <licenseResolver>${project.baseUri}/src/license</licenseResolver>
				        <descriptionTemplate>${basedir}/src/license/licenseDescriptionTemplate.ftl</descriptionTemplate>
				    </configuration>
				    <executions>
				        <execution>
				            <id>first</id>
				            <goals>
				                <goal>update-file-header</goal>
				                <goal>update-project-license</goal>
				                <goal>download-licenses</goal>
				                <goal>third-party-report</goal>
				                <goal>license-list</goal>
				            </goals>
				            <phase>process-sources</phase>
				        </execution>
				    </executions>
				</plugin>
			</plugins>
    	</pluginManagement>
    </build>	

    <profiles>
        <profile>
            <id>codeQuality</id>
            <build>
                <plugins>
				    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
					    <version>0.8.11</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>prepare-agent</goal>
                                </goals>
                            </execution>
                            <!-- attached to Maven test phase -->
                            <execution>
                                <id>report</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>report</goal>
                                </goals>
                            </execution>
				            </executions>
				    </plugin>				        
	                <plugin>
	                    <artifactId>maven-surefire-plugin</artifactId>
	                    <version>3.2.5</version>
	                </plugin>
                                    
                </plugins>
            </build>
        </profile>
